# Application Configuration
APP_NAME=EpiHelix API
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Neo4j Aura (Knowledge Graph)
# Sign up at: https://neo4j.com/cloud/aura-free/
# Get credentials from: https://console.neo4j.io/
# Leave empty to use mock mode for development
NEO4J_URI=
NEO4J_USER=neo4j
NEO4J_PASSWORD=
NEO4J_DATABASE=neo4j

# Vector Database for Semantic Search
# Neo4j 5+ has native vector support - no separate DB needed
VECTOR_DB_TYPE=neo4j

# LLM Configuration for Chatbot (Optional)
LLM_PROVIDER=mock
# OPENAI_API_KEY=sk-your_openai_key_here
# ANTHROPIC_API_KEY=sk-ant-your_anthropic_key
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7

# External Data Sources (Optional - for future ETL)
WIKIDATA_ENDPOINT=https://query.wikidata.org/sparql
