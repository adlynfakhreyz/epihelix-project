# Application Settings
APP_NAME=EpiHelix API
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","https://your-frontend-domain.com"]

# Neo4j Configuration
NEO4J_URI=neo4j+s://your-neo4j-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-password-here
NEO4J_DATABASE=neo4j

# Kaggle API Configuration (for embeddings, reranking, etc.)
KAGGLE_EMBEDDER_URL=https://your-kaggle-embedder-url.kaggle.io
KAGGLE_RERANKER_URL=https://your-kaggle-reranker-url.kaggle.io
KAGGLE_LLM_URL=https://your-kaggle-llm-url.kaggle.io

# Groq API Configuration
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=mixtral-8x7b-32768

# HuggingFace Configuration (optional)
HUGGINGFACE_API_KEY=your-hf-api-key-here
